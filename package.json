{
  "name": "dcf-tools",
  "version": "0.1.0",
  "description": "Command-line tools for DCF (Design Concept Format)",
  "main": "./dist/lib/index.js",
  "types": "./dist/lib/index.d.ts",
  "bin": {
    "dcf": "./dist/cli.js"
  },
  "exports": {
    ".": {
      "import": {
        "types": "./dist/lib/index.d.mts",
        "default": "./dist/lib/index.js"
      },
      "require": {
        "types": "./dist/lib/index.d.ts",
        "default": "./dist/lib/index.js"
      }
    },
    "./cli": {
      "require": "./dist/cli.js"
    }
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint . --ext .ts,.tsx",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "type-check": "tsc --noEmit"
  },
  "keywords": [
    "dcf",
    "data-contract-framework",
    "cli",
    "validation",
    "yaml",
    "json"
  ],
  "author": "DCF Tools Team",
  "license": "MIT",
  "engines": {
    "node": ">=20.0.0"
  },
  "dependencies": {
    "ajv": "^8.17.1",
    "ajv-formats": "^3.0.1",
    "chokidar": "^3.6.0",
    "commander": "^12.0.0",
    "express": "^4.19.2",
    "glob": "^10.3.10",
    "js-yaml": "^4.1.1",
    "lightningcss": "^1.30.2",
    "node-fetch": "^3.3.2",
    "open": "^10.1.0"
  },
  "devDependencies": {
    "@types/chokidar": "^2.1.3",
    "@types/express": "^4.17.21",
    "@types/glob": "^8.1.0",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.0.0",
    "@types/node-fetch": "^2.6.13",
    "@types/open": "^6.2.1",
    "@types/react": "^18.3.8",
    "@types/react-dom": "^18.3.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vitejs/plugin-react": "^4.3.1",
    "eslint": "^8.0.0",
    "prettier": "^3.0.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "tsup": "^8.0.0",
    "typescript": "^5.0.0",
    "vite": "^5.4.8",
    "vitest": "^1.0.0"
  }
}
