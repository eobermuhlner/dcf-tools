{
  "dcf_version": "1.0.0",
  "kind": "component",
  "profile": "standard",
  "name": "PageHeader",
  "props": {
    "title": { "type": "string" }
  },
  "content": [
    {
      "type": "frame",
      "layout": { "direction": "row", "align": "center", "justify": "space-between" },
      "style": {
        "padding": 16,
        "borderBottom": "1px solid {color.border}",
        "backgroundColor": "{color.surface}"
      },
      "children": [
        {
          "type": "text",
          "text": "$props.title",
          "style": {
            "fontSize": 24,
            "fontWeight": "bold",
            "color": "{color.text-primary}"
          }
        }
      ]
    }
  ]
}
