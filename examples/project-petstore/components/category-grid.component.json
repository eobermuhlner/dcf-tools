{
  "dcf_version": "1.0.0",
  "kind": "component",
  "profile": "standard",
  "name": "CategoryGrid",
  "props": {
    "title": { "type": "string" },
    "categories": { "type": "array" }
  },
  "content": [
    {
      "type": "frame",
      "layout": { "direction": "column", "gap": 16 },
      "style": { "padding": 16 },
      "children": [
        {
          "type": "text",
          "text": "$props.title",
          "style": {
            "fontSize": 24,
            "fontWeight": "bold",
            "color": "{color.text-primary}"
          }
        },
        {
          "type": "frame",
          "layout": { "direction": "row", "gap": 16, "wrap": true },
          "children": [
            {
              "type": "frame",
              "style": {
                "width": 150,
                "height": 100,
                "backgroundColor": "{color.secondary}",
                "borderRadius": 8,
                "padding": 16
              },
              "layout": { "align": "center", "justify": "center" },
              "children": [
                { "type": "text", "text": "Dogs", "style": { "color": "{color.text-inverse}", "fontWeight": "bold" } }
              ]
            },
            {
              "type": "frame",
              "style": {
                "width": 150,
                "height": 100,
                "backgroundColor": "{color.accent}",
                "borderRadius": 8,
                "padding": 16
              },
              "layout": { "align": "center", "justify": "center" },
              "children": [
                { "type": "text", "text": "Cats", "style": { "color": "{color.text-primary}", "fontWeight": "bold" } }
              ]
            },
            {
              "type": "frame",
              "style": {
                "width": 150,
                "height": 100,
                "backgroundColor": "{color.info}",
                "borderRadius": 8,
                "padding": 16
              },
              "layout": { "align": "center", "justify": "center" },
              "children": [
                { "type": "text", "text": "Birds", "style": { "color": "{color.text-inverse}", "fontWeight": "bold" } }
              ]
            },
            {
              "type": "frame",
              "style": {
                "width": 150,
                "height": 100,
                "backgroundColor": "{color.success}",
                "borderRadius": 8,
                "padding": 16
              },
              "layout": { "align": "center", "justify": "center" },
              "children": [
                { "type": "text", "text": "Fish", "style": { "color": "{color.text-inverse}", "fontWeight": "bold" } }
              ]
            }
          ]
        }
      ]
    }
  ]
}
