{
  "dcf_version": "1.0.0",
  "kind": "component",
  "profile": "standard",
  "name": "CartSummary",
  "props": {
    "subtotal": { "type": "number" },
    "tax": { "type": "number" },
    "total": { "type": "number" }
  },
  "content": [
    {
      "type": "frame",
      "layout": { "direction": "column", "gap": 12 },
      "style": { "padding": 16, "backgroundColor": "{color.surface}", "borderRadius": 8 },
      "children": [
        { "type": "text", "text": "Order Summary", "style": { "fontSize": 18, "fontWeight": "bold", "color": "{color.text-primary}" } },
        {
          "type": "frame",
          "layout": { "direction": "row", "justify": "space-between" },
          "children": [
            { "type": "text", "text": "Subtotal", "style": { "color": "{color.text-secondary}" } },
            { "type": "text", "text": "$798.00", "style": { "color": "{color.text-primary}" } }
          ]
        },
        {
          "type": "frame",
          "layout": { "direction": "row", "justify": "space-between" },
          "children": [
            { "type": "text", "text": "Tax (8%)", "style": { "color": "{color.text-secondary}" } },
            { "type": "text", "text": "$63.84", "style": { "color": "{color.text-primary}" } }
          ]
        },
        {
          "type": "frame",
          "layout": { "direction": "row", "justify": "space-between" },
          "style": { "paddingTop": 12, "borderTop": "1px solid {color.border}" },
          "children": [
            { "type": "text", "text": "Total", "style": { "fontWeight": "bold", "color": "{color.text-primary}" } },
            { "type": "text", "text": "$861.84", "style": { "fontWeight": "bold", "fontSize": 20, "color": "{color.primary}" } }
          ]
        }
      ]
    }
  ]
}
