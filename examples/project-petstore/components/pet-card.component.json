{
  "dcf_version": "1.0.0",
  "kind": "component",
  "profile": "standard",
  "name": "PetCard",
  "props": {
    "pet": { "type": "object" },
    "variant": { "type": "string" },
    "showActions": { "type": "boolean" }
  },
  "variants": {
    "variant": ["default", "compact", "featured"]
  },
  "content": [
    {
      "type": "frame",
      "style": {
        "width": 200,
        "backgroundColor": "{color.surface-elevated}",
        "borderRadius": 8,
        "overflow": "hidden",
        "boxShadow": "0 2px 8px rgba(0,0,0,0.1)",
        "cursor": "pointer"
      },
      "layout": { "direction": "column" },
      "children": [
        {
          "type": "frame",
          "style": { "height": 140, "backgroundColor": "{color.border}" },
          "layout": { "align": "center", "justify": "center" },
          "children": [
            { "type": "text", "text": "Image", "style": { "color": "{color.text-muted}" } }
          ]
        },
        {
          "type": "frame",
          "style": { "padding": 12 },
          "layout": { "direction": "column", "gap": 4 },
          "children": [
            { "type": "text", "text": "$props.pet.name", "style": { "fontWeight": "bold", "color": "{color.text-primary}" } },
            { "type": "text", "text": "$props.pet.breed", "style": { "fontSize": 12, "color": "{color.text-secondary}" } },
            { "type": "text", "text": "$props.pet.price", "style": { "fontWeight": "bold", "color": "{color.primary}" } }
          ]
        }
      ]
    }
  ]
}
