{
  "dcf_version": "1.0.0",
  "kind": "component",
  "profile": "standard",
  "name": "SearchBar",
  "props": {
    "placeholder": { "type": "string" },
    "value": { "type": "string" },
    "showFilters": { "type": "boolean" }
  },
  "content": [
    {
      "type": "frame",
      "layout": { "direction": "row", "gap": 8, "align": "center" },
      "style": {
        "padding": 12,
        "backgroundColor": "{color.surface}",
        "borderRadius": 8,
        "border": "1px solid {color.border}"
      },
      "children": [
        { "type": "text", "text": "Search pets...", "style": { "flex": 1, "color": "{color.text-muted}" } },
        {
          "type": "frame",
          "style": { "padding": 8, "backgroundColor": "{color.primary}", "borderRadius": 4 },
          "children": [
            { "type": "text", "text": "Search", "style": { "color": "{color.text-inverse}", "fontSize": 14 } }
          ]
        }
      ]
    }
  ]
}
