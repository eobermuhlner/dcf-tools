{
  "dcf_version": "1.0.0",
  "profile": "standard",
  "tokens": {
    "colors": {
      "primary": "#007acc",
      "secondary": "#6c757d",
      "success": "#28a745",
      "danger": "#dc3545",
      "warning": "#ffc107",
      "info": "#17a2b8",
      "light": "#f8f9fa",
      "dark": "#343a40"
    },
    "spacing": {
      "xs": "0.25rem",
      "sm": "0.5rem",
      "md": "1rem",
      "lg": "1.5rem",
      "xl": "3rem",
      "xxl": "4rem"
    },
    "typography": {
      "fontFamily": {
        "primary": "Inter, system-ui, sans-serif",
        "heading": "Inter, system-ui, sans-serif",
        "code": "SFMono-Regular, Consolas, 'Liberation Mono', Menlo, monospace"
      },
      "fontSize": {
        "xs": "0.75rem",
        "sm": "0.875rem",
        "base": "1rem",
        "lg": "1.125rem",
        "xl": "1.25rem",
        "h1": "2.5rem",
        "h2": "2rem",
        "h3": "1.5rem",
        "h4": "1.25rem",
        "h5": "1.125rem",
        "h6": "1rem"
      },
      "fontWeight": {
        "normal": "400",
        "medium": "500",
        "semibold": "600",
        "bold": "700"
      }
    },
    "border": {
      "radius": {
        "sm": "2px",
        "md": "4px",
        "lg": "8px",
        "xl": "12px"
      },
      "width": {
        "sm": "1px",
        "md": "2px",
        "lg": "4px"
      }
    }
  },
  "components": {
    "Button": {
      "type": "button",
      "description": "A standard button component",
      "props": {
        "variant": {
          "type": "enum",
          "values": ["primary", "secondary", "success", "danger", "warning", "info", "light", "dark"],
          "default": "primary"
        },
        "size": {
          "type": "enum",
          "values": ["sm", "md", "lg"],
          "default": "md"
        },
        "disabled": {
          "type": "boolean",
          "default": false
        }
      },
      "style": {
        "padding": "{spacing.md}",
        "borderRadius": "{border.radius.md}",
        "border": "1px solid transparent",
        "backgroundColor": "{colors.primary}",
        "color": "white",
        "fontSize": "{typography.fontSize.base}",
        "fontWeight": "{typography.fontWeight.medium}",
        "cursor": "pointer",
        "transition": "all 0.2s ease"
      },
      "variants": {
        "primary": {
          "backgroundColor": "{colors.primary}",
          "color": "white"
        },
        "secondary": {
          "backgroundColor": "{colors.secondary}",
          "color": "white"
        },
        "success": {
          "backgroundColor": "{colors.success}",
          "color": "white"
        },
        "danger": {
          "backgroundColor": "{colors.danger}",
          "color": "white"
        }
      }
    },
    "Card": {
      "type": "container",
      "description": "A card component for grouping related content",
      "props": {
        "elevation": {
          "type": "enum",
          "values": ["low", "medium", "high"],
          "default": "medium"
        }
      },
      "style": {
        "borderRadius": "{border.radius.lg}",
        "border": "1px solid #e0e0e0",
        "backgroundColor": "white",
        "padding": "{spacing.lg}",
        "boxShadow": "0 2px 4px rgba(0,0,0,0.1)"
      }
    }
  }
}