{
  "dcf_version": "1.0.0",
  "profile": "standard",
  "components": {
    "Button": {
      "type": "button",
      "description": "A standard button component",
      "props": {
        "variant": {
          "type": "enum",
          "values": ["primary", "secondary", "success", "danger", "warning", "info", "light", "dark"],
          "default": "primary"
        },
        "size": {
          "type": "enum",
          "values": ["sm", "md", "lg"],
          "default": "md"
        },
        "disabled": {
          "type": "boolean",
          "default": false
        }
      },
      "style": {
        "padding": "{spacing.md}",
        "borderRadius": "{border.radius.md}",
        "border": "1px solid transparent",
        "backgroundColor": "{colors.primary}",
        "color": "white",
        "fontSize": "{typography.fontSize.base}",
        "fontWeight": "{typography.fontWeight.medium}",
        "cursor": "pointer",
        "transition": "all 0.2s ease"
      },
      "variants": {
        "primary": {
          "backgroundColor": "{colors.primary}",
          "color": "white"
        },
        "secondary": {
          "backgroundColor": "{colors.secondary}",
          "color": "white"
        },
        "success": {
          "backgroundColor": "{colors.success}",
          "color": "white"
        },
        "danger": {
          "backgroundColor": "{colors.danger}",
          "color": "white"
        }
      }
    },
    "Card": {
      "type": "container",
      "description": "A card component for grouping related content",
      "props": {
        "elevation": {
          "type": "enum",
          "values": ["low", "medium", "high"],
          "default": "medium"
        }
      },
      "style": {
        "borderRadius": "{border.radius.lg}",
        "border": "1px solid #e0e0e0",
        "backgroundColor": "white",
        "padding": "{spacing.lg}",
        "boxShadow": "0 2px 4px rgba(0,0,0,0.1)"
      }
    }
  }
}