{
  "dcf_version": "1.0.0",
  "profile": "standard",
  "tokens": {
    "colors": {
      "primary": "#007acc",
      "secondary": "#6c757d",
      "success": "#28a745",
      "danger": "#dc3545",
      "warning": "#ffc107",
      "info": "#17a2b8",
      "light": "#f8f9fa",
      "dark": "#343a40"
    },
    "spacing": {
      "xs": "0.25rem",
      "sm": "0.5rem",
      "md": "1rem",
      "lg": "1.5rem",
      "xl": "3rem"
    }
  },
  "components": {
    "Button": {
      "type": "button",
      "props": {
        "variant": {
          "type": "enum",
          "values": ["primary", "secondary", "success", "danger"]
        }
      },
      "style": {
        "padding": "{spacing.md}",
        "borderRadius": "4px",
        "backgroundColor": "{colors.primary}",
        "color": "white"
      }
    },
    "Header": {
      "type": "container",
      "style": {
        "backgroundColor": "{colors.primary}",
        "color": "white",
        "padding": "{spacing.md}",
        "display": "flex",
        "alignItems": "center"
      }
    },
    "Sidebar": {
      "type": "container",
      "style": {
        "backgroundColor": "{colors.light}",
        "padding": "{spacing.md}",
        "borderRight": "1px solid {colors.secondary}"
      }
    },
    "MainContent": {
      "type": "container",
      "style": {
        "padding": "{spacing.lg}",
        "flex": 1
      }
    },
    "Footer": {
      "type": "container",
      "style": {
        "backgroundColor": "{colors.dark}",
        "color": "white",
        "padding": "{spacing.md}",
        "textAlign": "center"
      }
    },
    "Card": {
      "type": "container",
      "style": {
        "border": "1px solid {colors.secondary}",
        "borderRadius": "4px",
        "padding": "{spacing.lg}",
        "backgroundColor": "white"
      }
    }
  },
  "layouts": {
    "MainLayout": {
      "type": "container",
      "regions": {
        "header": {
          "component": "Header",
          "constraints": {
            "position": "top",
            "height": "60px"
          }
        },
        "sidebar": {
          "component": "Sidebar",
          "constraints": {
            "position": "left",
            "width": "250px"
          }
        },
        "main": {
          "component": "MainContent",
          "constraints": {
            "flex": 1
          }
        },
        "footer": {
          "component": "Footer",
          "constraints": {
            "position": "bottom",
            "height": "40px"
          }
        }
      }
    }
  },
  "screens": {
    "HomeScreen": {
      "layout": "MainLayout",
      "regions": {
        "header": {
          "component": "Header",
          "props": {
            "title": "Home"
          }
        },
        "main": {
          "component": "Card",
          "props": {
            "title": "Welcome",
            "content": "Welcome to our application"
          }
        }
      }
    },
    "AboutScreen": {
      "layout": "MainLayout",
      "regions": {
        "header": {
          "component": "Header",
          "props": {
            "title": "About"
          }
        },
        "main": {
          "component": "Card",
          "props": {
            "title": "About Us",
            "content": "Learn more about our company"
          }
        }
      }
    }
  },
  "navigation": {
    "routes": [
      {
        "path": "/",
        "screen": "HomeScreen",
        "title": "Home"
      },
      {
        "path": "/about",
        "screen": "AboutScreen",
        "title": "About"
      }
    ]
  }
}